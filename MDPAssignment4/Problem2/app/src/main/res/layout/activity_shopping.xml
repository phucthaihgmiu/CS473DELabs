<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Shopping_Activity">


    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableRow
            >
            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="22dp">
                <LinearLayout
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="clickMac"
                    android:orientation="vertical"
                    android:focusable="true">
                    <ImageView
                        android:contentDescription="desc1"
                        android:scaleType="fitCenter"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/mac"
                        />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="5dp"
                        android:text="Mac"
                        android:fontFamily="sans-serif-black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="22dp">
                <LinearLayout
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="clickAirpods"
                    android:orientation="vertical"
                    android:focusable="true">
                    <ImageView
                        android:contentDescription="desc1"
                        android:scaleType="fitCenter"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/airpods"
                        />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="5dp"
                        android:text="Airpods"
                        android:fontFamily="sans-serif-black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </TableRow>

        <TableRow
            >
            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="22dp">
                <LinearLayout
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="clickiPad"
                    android:orientation="vertical"
                    android:focusable="true">
                    <ImageView
                        android:contentDescription="desc1"
                        android:scaleType="fitCenter"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ipad"
                        />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="5dp"
                        android:text="iPad"
                        android:fontFamily="sans-serif-black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="22dp">
                <LinearLayout
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="clickiPhone"
                    android:orientation="vertical"
                    android:focusable="true">
                    <ImageView
                        android:contentDescription="desc1"
                        android:scaleType="fitCenter"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/iphone"
                        />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="5dp"
                        android:text="iPhone"
                        android:fontFamily="sans-serif-black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </TableRow>
    </TableLayout>
</LinearLayout>